
@{
    ViewBag.Title = "Create Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = "http://riset.ajk.if.its.ac.id/kel1irci/";
}

<div id="headerwrap" style="height: 100vh">
    <div class="container">
        <div class="row">
            <div class="col-sm-6" style="margin: 0 auto; left:25%; top: 50%; transform: translateY(50%); background-color: white; padding: 2em; color: black">
                <!-- <h3>Show your work with this beautiful theme</h3> -->
                <h4 style="color:black">Buat Profile Utama</h4>
                    <form action="@(url+"ProfileManager/doCreateProfile")" method="post" class="col-sm-8 col-lg-offset-2">
                        <div class="form-group">
                            <input name="nama" required type="text" class="form-control" placeholder="Nama" />
                        </div>
                        <div class="form-group">
                            <textarea name="instansi" required class="form-control" placeholder="Instansi"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Profile</button>
                        </form>
                    </div>
        </div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /headerwrap -->
